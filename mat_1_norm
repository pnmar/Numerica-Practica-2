#include <iostream>
#include <cmath>
#include "stdlib.h"
using namespace std;

/* PRE: A matrix of dimensions nxn is given.
   POS: The nor_1 of the matrix is returned. */

double mat_1_norm(double **a, int n){
    double max = 0;
    
    for (int j = 0; j < n; ++i){
        double sum = 0;
        for (int i = 0; i < n; ++i) sum += abs(a[i][j]);
        if (max < sum) max = sum;
    }
    
    return max;
    
}
